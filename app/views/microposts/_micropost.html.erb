<hr>
<div class="post">
  <%= image_tag micropost.picture.url if micropost.picture? %>
  <p><%= micropost.content %></p>
      <p class="date"> <%= time_ago_in_words(micropost.created_at) %> ago ~ <%= link_to micropost.user.name, micropost.user %>  </p>
      <% if current_user?(micropost.user) %>
            <%= link_to "delete", micropost, method: :delete,
                      data: { confirm: "You sure?" }, class: "remove" %>
      <% end %>
</div>
<hr>



