<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %> </title> <!-- set to render auto | Notulu -->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>

</head>
<body>

<div id="container" class="row">

    <%= yield :home_sidebar %>
    <%= yield :dashboard_sidebar %>

    <%= yield :content %>


  <div id="<%=controller_name%>-<%=action_name%>" class="col-xs-12 col-sm-8 col-md-9">

    <% flash.each do |message_type, message| %> <!-- Adding the contents of the flash variable to the site layout  -->
        <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>

    <%= yield %>
  </div>




  <%= debug(params) if Rails.env.development? %> <!-- allow to retursn debug display to development ENV only -->

</div>

</body>
</html>
