<%= provide(:title, "Register") %>

<!DOCTYPE html>
<html lang="en">
<head>

</head>
<body class="body">

<%= content_for :home_sidebar do %>

    <nav>
      <%= link_to "Notulu", root_path, id:"logo" %>
      <ul>
        <li><%= link_to "Create account", signup_path, class:'button button_highlight' %></li>
        <li><%= link_to "Sign in", "", id:"signin"%></li>
      </ul>
    </nav>

<% end %>


    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <div class="row">
            <div class="field col-md-6">
              <%= f.label :name %> <br>
              <%= f.text_field :name, class:'form-control' %>

            </div>

            <div class="field col-md-6">
              <%= f.label :email %> <br>
              <%= f.email_field :email, class:'form-control' %>
            </div>

          </div>

          <div class="row">
            <div class="field col-md-6">
              <%= f.label :password %>
              <%= f.password_field :password, class:'form-control' %>
            </div>

            <div class="field col-md-6">
              <%= f.label :password_confirmation, "Password confirmation"%>
              <%= f.password_field :password_confirmation, class:'form-control' %>
            </div>
          </div>

          <div class="row">
            <div class="actions col-md-6">
              <%= link_to "Cancel", root_path %>
              <%= f.submit "Submit", class: "button_green" %>
            </div>
          </div>
    <% end %>



</body>
</html>
