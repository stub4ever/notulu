<% if @user.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        the form contains <%= pluralize(@user.errors.count, "error") %> <!-- this method pluralize a larger number of words -->
      </div>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>