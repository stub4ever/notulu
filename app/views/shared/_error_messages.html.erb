<% if object.errors.any? %>
    <div id="error_explanation">
      <div class="alert">
        The form contains <%= pluralize(object.errors.count, "error") %>. <!-- this method pluralize a larger number of words -->
      </div>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>